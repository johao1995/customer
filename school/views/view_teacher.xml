<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="school.view_school_teacher_form" model="ir.ui.view">
        <field name="name">school.view.school.teacher_form</field>
        <field name="model">school.teacher</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="profile"/>
                            
                        </group>
                    </group>
                    <field name="subject_ids"/>
                   
                </sheet>
            </form>
        </field>
    </record>
    <record id="school.action_school_teacher" model="ir.actions.act_window">
        <field name="name">Teacher</field>
        <field name="res_model">school.teacher</field>
        <field name="view_mode">tree,form,kanban</field>
    </record>
</odoo>