$(document).ready(function () {
   
    var btn_1=$('#btn-1');
    var btn_2=$('#btn-2');
    var s1=$('#s1');

    btn_1.click(function(){ --> evento hide() te oculta
        s1.hide();
    });

    btn_2.click(function(){ --> evento show te muestra
        s1.show();
    })

click()---> evento click
});
